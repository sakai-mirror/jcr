<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/3.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://maven.apache.org/maven-v3_0_0.xsd">
  <extend>../../../master/project.xml</extend>
  <pomVersion>3</pomVersion>
  <name>sakai-jcr-api</name>
  <groupId>sakaiproject</groupId>
  <artifactId>sakai-jcr-api</artifactId>
    <currentVersion>${sakai.version}</currentVersion>
  <shortDescription>JCR Service API</shortDescription>
  <properties>
    <deploy.type>jar</deploy.type>
	  <deploy.target>shared</deploy.target>
  </properties>
  <build>
    <!-- java source -->
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test</include>
      </includes>
      <resources>
        <resource>
          <directory>${basedir}/src/testBundle</directory>
          <includes>
            <include>**/*.*</include>
          </includes>
          <filtering>false</filtering>
        </resource>
      </resources>
    </unitTest>
    <!-- other resources for the jar - the message bundles -->
    <resources>
      <resource>
        <directory>${basedir}/src/bundle</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>${basedir}/src/java</directory>
        <includes>
          <include>**/*.xml</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
  <dependencies>
    <dependency>
      <groupId>javax.jcr</groupId>
      <artifactId>jcr</artifactId>
      <version>1.0</version>
      <properties>
	<deploy.target>shared</deploy.target>
      </properties>
    </dependency>
   </dependencies>
</project>
